<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- CANVAS -->
    <FrameLayout
        android:id="@+id/canvasLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE" />

    <!-- TOOLS STRIP (VISIBLE ONLY WHEN A LAYER IS SELECTED) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/toolRecycler"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:padding="8dp"
        android:visibility="visible"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:overScrollMode="never" />

    <!-- BOTTOM LAYER STRIP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- ADD IMAGE BUTTON -->
        <ImageView
            android:id="@+id/btnAddLayerInline"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_add"
            android:background="@drawable/bg_layer_item_selected"
            android:padding="12dp" />

        <!-- HORIZONTAL LAYER LIST -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layerRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:overScrollMode="never" />
    </LinearLayout>

</LinearLayout>
