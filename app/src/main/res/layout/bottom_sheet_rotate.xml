<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:paddingBottom="16dp" />

        <!-- SLIDER -->
        <com.google.android.material.slider.Slider
            android:id="@+id/sliderRotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Rotate angle"
            app:trackColorActive="@color/blue_tint"
            android:value="0"
            android:valueFrom="-180"
            android:valueTo="180"
            android:stepSize="0" />

        <!-- ANGLE INPUT -->
        <com.google.android.material.textfield.TextInputLayout
            style="?attr/textInputFilledStyle"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:hint="Angle (°)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:gravity="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- QUICK ROTATE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnRotateLeft"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_tint"
                android:layout_weight="1"
                android:text="Left 90°"
                app:icon="@drawable/ic_rotate_left" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnRotateRight"
                android:backgroundTint="@color/blue_tint"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Right 90°"
                app:icon="@drawable/ic_rotate_right" />
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="?attr/colorOutline" />

        <!-- UNDO / REDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnUndo"
                android:backgroundTint="@color/blue_tint"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Undo"
                app:icon="@drawable/ic_undo" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnRedo"
                android:backgroundTint="@color/blue_tint"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Redo"
                app:icon="@drawable/ic_redo" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
